{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "baseUrl": "./",
      "resolveJsonModule": true,
      "outDir": "dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["./**/*.ts", "./server.ts"],
    "exclude": ["node_modules"]
}